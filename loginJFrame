    private void IngresarActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String usuario=jTextUsuario.getText();
       String clave=jPassword.getText();
       if(usuario.equals("Danny") && clave.equals("1234")){
       //JOptionPane.showMessageDialog (null, "Usuario es correcto");
       PrincipalJFrame pjf=new PrincipalJFrame();
       pjf.setExtendedState(pjf.MAXIMIZED_BOTH);
       pjf.show();
       this.hide();
       
       }else{
       JOptionPane.showMessageDialog (null, "Usuario Ingresado Incorrecto "+contador);
       contador++;
       jTextUsuario.setText("");
       jPassword.setText("");
       jTextUsuario.requestFocus();
           if (contador > 3) {
               JOptionPane.showMessageDialog(null, "Numero de intentos excedido esperar un momento");
               
               //this.hide();
               this.dispose();
               
           }
       }
    }                                        

