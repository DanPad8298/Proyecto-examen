    private void jButton17ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        dividendo=Double.parseDouble(jTextValor1.getText());
        jTextValor1.setText("");
        operacion="division";
    }                                         

    private void jButton12ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        divisor=Double.parseDouble(jTextValor1.getText());
        double resultado=0;
        sumando1=Double.parseDouble(jTextValor1.getText());
        sustraendo=Double.parseDouble(jTextValor1.getText());
        multiplicador=Double.parseDouble(jTextValor1.getText());
       
        
    switch(operacion){
    case "suma":
    resultado=sumando+sumando1;
        jTextValor1.setText(String.valueOf(resultado));
        operacion="";
    break;
    case"resta":
    resultado=minuendo-sustraendo;
        jTextValor1.setText(String.valueOf(resultado));
        operacion="";
    break;
    case"multiplicacion":
    resultado=multiplicando*multiplicador;
        jTextValor1.setText(String.valueOf(resultado));
        operacion="";
    break;
    case"division":
        try {
        resultado=dividendo/divisor;
        jTextValor1.setText(String.valueOf(resultado));
        
    } catch (Exception e) {
        jTextValor1.setText("ERROR");
    }
    operacion="";
    break;
    }                                         
    }
