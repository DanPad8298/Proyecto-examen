    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        //Boton Calcular
        double centimetros=Double.parseDouble(jTextField1.getText());
        double yardas=centimetros*0.0109361; 
        double kilometros=centimetros*0.00001; 
        double millas=centimetros*0.0000062137;
        double metros=centimetros*0.01;
        String resultado=String.valueOf(yardas);
        jLabel7.setText(resultado);
        String resul=String.valueOf(kilometros);
        jLabel8.setText(resul);
        String resulta=String.valueOf(millas);
        jLabel9.setText(resulta);
        String resultad=String.valueOf(metros);
        jLabel10.setText(resultad);
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        //Botón Limpiar
        jTextField1.setText("");
        jLabel7.setText("");
        jLabel8.setText("");
        jLabel9.setText("");
        jLabel10.setText("");
    }                                        


